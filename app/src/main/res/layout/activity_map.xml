<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapActivity" />

    <TableLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="bottom|left">

        <TableRow
            android:id="@+id/tableRow_5G"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BFEAEAEA"
            android:gravity="center_vertical"
            card_view:visibility="visible">

            <Button
                android:id="@+id/color_5G"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:height="10dp"
                android:backgroundTint="#20DABE"
                android:scaleX="1" />

            <TextView
                android:id="@+id/text_5G"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="5G"
                android:textColor="#222222" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow_4G"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BFEAEAEA"
            android:gravity="center_vertical"
            card_view:visibility="visible">

            <Button
                android:id="@+id/color_4G"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:height="10dp"
                android:backgroundTint="#66E100"
                android:scaleX="1" />

            <TextView
                android:id="@+id/text_4G"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="4G"
                android:textColor="#222222" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow_3G"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BFEAEAEA"
            android:gravity="center_vertical"
            card_view:visibility="visible">

            <Button
                android:id="@+id/color_3G"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:height="10dp"
                android:backgroundTint="#FFE100" />

            <TextView
                android:id="@+id/text_3G"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="3G"
                android:textColor="#222222" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow_Hplus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BFEAEAEA"
            android:gravity="center_vertical"
            card_view:visibility="visible">

            <Button
                android:id="@+id/color_Hplus"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:height="10dp"
                android:backgroundTint="#FF6600" />

            <TextView
                android:id="@+id/text_Hplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="H+"
                android:textColor="#222222" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow_H"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BFEAEAEA"
            android:gravity="center_vertical"
            card_view:visibility="visible">

            <Button
                android:id="@+id/color_H"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:height="10dp"
                android:backgroundTint="#FF0A00" />

            <TextView
                android:id="@+id/text_H"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="H"
                android:textColor="#222222" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow_E"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BFEAEAEA"
            android:gravity="center_vertical"
            card_view:visibility="visible">

            <Button
                android:id="@+id/color_E"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:height="10dp"
                android:backgroundTint="#9C27B0" />

            <TextView
                android:id="@+id/text_E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="E"
                android:textColor="#222222" />
        </TableRow>

    </TableLayout>

</FrameLayout>