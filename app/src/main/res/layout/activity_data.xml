<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location :" />

        <TextView
            android:id="@+id/locationDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:id="@+id/mobileNetworkText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Newtork :" />

        <TextView
            android:id="@+id/mobileNetworkDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:id="@+id/networkTypeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Network technology :" />

        <TextView
            android:id="@+id/networkTypeDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:id="@+id/networkDetailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Network technology detail :" />

        <TextView
            android:id="@+id/networkDetailDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:id="@+id/downSpeedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Downstream bandwidth :" />

        <TextView
            android:id="@+id/downSpeedDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:id="@+id/upSpeedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upstream bandwidth :" />

        <TextView
            android:id="@+id/upSpeedDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>